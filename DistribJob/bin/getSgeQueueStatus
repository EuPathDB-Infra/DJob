#!/bin/sh

qstat -u '*' | perl -e '$totR = 0;$totQ=0;while(<STDIN>){chomp;my @tmp = split(/\s+/,$_);if($tmp[5] =~ /qw/){$ct++;$queue{$tmp[4]} += $tmp[-1];$d{$tmp[4]}->{minTime} = "$tmp[6]: $tmp[7]" unless $d{$tmp[4]}->{minTime};$d{$tmp[4]}->{maxP} = "$tmp[2] ($ct)" unless $d{$tmp[4]}->{maxP};}else{$user{$tmp[4]} += $tmp[9];}} print "Running:\n";foreach my $u (sort{$user{$b} <=> $user{$a}}keys%user){print "  $u: $user{$u}\n";$totR += $user{$u};} print "Total Running: $totR\n\nQueued:\n";print "  ".sprintf("%--10s %-10s %-25s %-12s", "User", "Num Q (R)", "minQueueTime", "maxPriority (pos)")."\n"; foreach my $u (sort{$queue{$b} <=> $queue{$a}}keys%queue){print "  ".sprintf("%--10s %-10s %-25s %-12s", "$u", "$queue{$u} ($user{$u})", $d{$u}->{minTime}, $d{$u}->{maxP})."\n";$totQ += $queue{$u}; }print "Total Queued: $totQ\n";'


