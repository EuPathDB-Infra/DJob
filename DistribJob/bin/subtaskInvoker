#!/bin/sh

localdir=$1
serverdir=$2

shift 2

cd $localdir

$* > subtask.output 2> subtask.stderr    ## stdout goes into subtask.output and stderr into subtask.stderr

status=$?

for file in $localdir/*
do
  cp -r $file $serverdir
done 

if [ $status != 0 ]; then
  touch $serverdir/failed
fi

touch $serverdir/done

